generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  OWNER
  MEMBER
}



// enum Role removed for SQLite compatibility

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id                     String    @id @default(uuid())
  name                   String
  email                  String    @unique
  emailVerified          DateTime?
  password               String?
  image                  String?
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @default(now())
  invalid_login_attempts Int       @default(0)
  lockedAt               DateTime?

  teamMembers TeamMember[]
  accounts    Account[]
  sessions    Session[]
  invitations Invitation[]
}

model Team {
  id              String       @id @default(uuid())
  name            String
  slug            String       @unique
  domain          String?      @unique
  defaultRole     Role         @default(MEMBER) // Changed back to Role enum
  billingId       String?
  billingProvider String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @default(now())
  members         TeamMember[]
  invitations     Invitation[]
  apiKeys         ApiKey[]
  property        Property?

  @@index([billingId])
}

model TeamMember {
  id        String   @id @default(uuid())
  teamId    String
  userId    String
  role      Role     @default(MEMBER) // Changed back to Role enum
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId])
  @@index([userId])
}

model Property {
  id          String   @id @default(uuid())
  teamId      String   @unique
  name        String
  city        String
  country     String   @default("Portugal")
  address     String?
  phone       String?
  email       String?
  website     String?
  timezone    String   @default("Europe/Lisbon")
  currency    String   @default("EUR")
  taxRate     Float    @default(0.0)
  checkInTime String   @default("15:00")
  checkOutTime String  @default("11:00")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  team     Team      @relation(fields: [teamId], references: [id], onDelete: Cascade)
  rooms    Room[]
  bookings Booking[]
  guests   Guest[]
}

model Room {
  id          String   @id @default(uuid())
  propertyId  String
  name        String
  type        String   // "dormitory", "private", "suite"
  beds        Int      @default(1)
  pricePerNight Int    @default(0) // in cents
  status      String   @default("available") // "available", "maintenance", "closed"
  description String?
  amenities   String?  // JSON string: ["wifi", "ac", "bathroom", "balcony"]
  maxOccupancy Int     @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  property    Property     @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  bookingBeds BookingBed[]

  @@index([propertyId])
  @@index([status])
}

model Booking {
  id           String    @id @default(uuid())
  propertyId   String
  guestId      String?
  checkIn      DateTime
  checkOut     DateTime
  status       String    @default("confirmed") // "pending", "confirmed", "checked_in", "checked_out", "cancelled", "no_show"
  channel      String?   // "direct", "booking.com", "hostelworld", "walk_in"
  totalAmount  Int       @default(0) // in cents
  amountPaid   Int       @default(0) // in cents
  paymentStatus String   @default("pending") // "pending", "partial", "paid", "refunded"
  notes        String?
  confirmationCode String? @unique
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @default(now())

  property Property     @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  guest    Guest?       @relation(fields: [guestId], references: [id], onDelete: SetNull)
  beds     BookingBed[]
  payments Payment[]

  @@index([propertyId])
  @@index([checkIn])
  @@index([status])
  @@index([confirmationCode])
}

model BookingBed {
  id        String   @id @default(uuid())
  bookingId String
  roomId    String
  bedLabel  String
  pricePerNight Int @default(0) // in cents, can override room price

  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  room    Room    @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([bookingId])
  @@index([roomId])
}

model Guest {
  id           String    @id @default(uuid())
  propertyId   String
  firstName    String
  lastName     String
  currency     String    @default("EUR")
  email        String?
  phone        String?
  nationality  String?
  documentType String?   // "passport", "id_card", "driving_license"
  documentId   String?
  dateOfBirth  DateTime?
  address      String?
  city         String?
  country      String?
  notes        String?
  blacklisted  Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @default(now())

  property Property  @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  bookings Booking[]

  @@index([propertyId])
  @@index([email])
  @@index([documentId])
}

model Payment {
  id            String   @id @default(uuid())
  bookingId     String
  amount        Int      // in cents
  currency      String   @default("EUR")
  method        String   // "cash", "card", "bank_transfer", "online"
  status        String   @default("completed") // "pending", "completed", "failed", "refunded"
  reference     String?  // external payment reference
  notes         String?
  processedBy   String?  // user ID who processed the payment
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())

  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@index([bookingId])
  @@index([status])
}

model Expense {
  id          String   @id @default(uuid())
  propertyId  String
  category    String   // "maintenance", "supplies", "utilities", "marketing", "other"
  description String
  amount      Int      // in cents
  currency    String   @default("EUR")
  date        DateTime @default(now())
  receipt     String?  // file path or URL
  notes       String?
  createdBy   String   // user ID
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  @@index([propertyId])
  @@index([category])
  @@index([date])
}

model Invitation {
  id             String   @id @default(uuid())
  teamId         String
  email          String?
  role           Role     @default(MEMBER) // Changed back to Role enum
  token          String   @unique
  expires        DateTime
  invitedBy      String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @default(now())
  sentViaEmail   Boolean  @default(true)
  allowedDomains String?  // JSON string array

  user User @relation(fields: [invitedBy], references: [id], onDelete: Cascade)
  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@unique([teamId, email])
  @@index([email])
}

model PasswordReset {
  id        Int      @id @default(autoincrement())
  email     String
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  expiresAt DateTime
}

model ApiKey {
  id         String    @id @default(uuid())
  name       String
  teamId     String
  hashedKey  String    @unique
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now())
  expiresAt  DateTime?
  lastUsedAt DateTime?

  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([teamId])
}

model Subscription {
  id         String    @id
  customerId String
  priceId    String
  active     Boolean   @default(false)
  startDate  DateTime
  endDate    DateTime
  cancelAt   DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now())

  @@index([customerId])
}

model Service {
  id          String   @id @default(uuid())
  description String
  features    String?  // JSON string array
  image       String
  name        String
  created     DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  Price       Price[]
}

model Price {
  id            String   @id @default(uuid())
  billingScheme String
  currency      String
  serviceId     String
  amount        Int?
  metadata      Json // Changed back to Json
  type          String
  created       DateTime

  service Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)
}

model jackson_store {
  key        String    @id
  value      String
  iv         String?
  tag        String?
  createdAt  DateTime  @default(now())
  modifiedAt DateTime?
  namespace  String?

  jackson_index jackson_index[]

  @@index([namespace])
  @@ignore
}

model jackson_index {
  id       Int    @id @default(autoincrement())
  key      String
  storeKey String

  store jackson_store @relation(fields: [storeKey], references: [key], onDelete: Cascade, onUpdate: NoAction)

  @@index([key])
  @@index([key, storeKey])
  @@ignore
}

model jackson_ttl {
  key       String @id
  expiresAt BigInt

  @@index([expiresAt])
  @@ignore
}
